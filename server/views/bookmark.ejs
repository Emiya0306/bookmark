<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Bookmark</title>
    <link rel="stylesheet" type="text/css" href="/newBookmark.css">
    <link rel="stylesheet" type="text/css" href="/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">My bookmark</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">Home</a></li>
                    <% if(user) {%>
                    <li><a href="/logout" >Logout</a></li>
                    <% } else { %>
                    <li><a href="/login" >Login</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <form action="/bookmarks" method="post">
            <div class="form-group">
                <label for="title">title:</label>
                <input class="form-control" id="title" name="title" type="text" value="<%= bookmark.title %>" />
            </div>
            <div class="form-group">
                <label for="link">link:</label>
                <input class="form-control" id="link" name="link" type="text" value="<%= bookmark.link %>" />
            </div>
            <div class="form-group">
                <label for="private">private:</label>
                <input class="form-control" id="private" type="checkbox" <%= bookmark.private ? "checked" : "" %> onclick="check()" />
            </div>
            <input id="private_check" class="hidden" name="private" value="<%= bookmark.private %>" />
            <input id="owner" name="owner" type="text" class="hidden" value="<%= user.id %>" />
            <input id="bookmarkId" class="hidden" name="id" value="<%= bookmark.id %>" />
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
    <script>
        function check() {
            var private_check = document.getElementById("private_check");
            if(private_check.value) {
                private_check.value = true;
            } else {
                private_check.value = false;
            }
        }
    </script>
</body>
</html>
